<% layout('../template') -%>

<div id="leftCol" class="left">
	<%- include ../includes/loginRegisterList.ejs %>
	<%- include ../includes/profileSidebar.ejs %>
	<%- include ../includes/profileListSidebar.ejs %>
	<%- include ../includes/footer.ejs %>
</div>
<div id="rightCol" class="right">
	<div class="profile content noPadding">
		<div id="carbon">
<!-- 			<img src="/img/user_pics/<%= user.uname %>.jpeg" onerror="this.src='/img/user_pics/default.jpeg';" width="72" height="72" /> -->
			<h2><%- user.uname %></h2>
			<h3><%- user.email %></h3>
			<%- buttons %>
		</div>
		<ul id="profileStats" class="stats">
			<%- include ../includes/glanceStats.ejs %>
			<% if (user.uname != session.user.uname) { %>
				<li class="right<% if (func === "sendMessage") { %> active<% } %>"><a href="/user/<%= user.uname %>/message?iframe=true&width=100%&height=100%" rel="prettyPhoto">Send <%= user.uname %> a Message<br /><span>0 New Messages</span></a></li>
			<% } else { %>
				<li class="right<% if (func === "settings") { %> active<% } %>"><a href="/settings/">Edit your profile<br /><span>40% complete</span></a></li>
			<% } %>
		</ul>
		<div class="clearfix">&nbsp;</div>
	</div>
	<div class="content">
		<div id="data">
			<%- data %>
		</div>
	</div>
</div>
<div class="clearfix">&nbsp;</div>
